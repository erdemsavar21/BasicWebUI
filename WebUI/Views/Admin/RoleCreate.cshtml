
@model WebUI.Models.Member.RoleViewModel

@{
    ViewData["Title"] = "Role Create";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <table class="table table-bordered table-striped">
            <tr>
                <td>Id</td>
                <td>Name</td>
                <td></td>
            </tr>
            @if (Model.Roles.Count == 0)
            {
                <tr>
                    <td colspan="3">Data ist empty</td>
                </tr>
            }
            else
            {
                @foreach (var role in Model.Roles)
                {
                    <tr>
                        <td>@role.RoleId</td>
                        <td>@role.RoleName</td>
                        <td class="text-right"><a class="btn btn-xs btn-danger" asp-controller="Admin" asp-action="RoleDelete" asp-route-roleId="@role.RoleId">delete</a></td>
                    </tr>
                }
            }
        </table>

    </div>

    <div id="loginbox" style="margin-top:10px;" class="mainbox col-md-6">
        <div class="panel panel-info">
            <div class="panel-heading">
                <div class="panel-title">Add Role</div>
            </div>
            <div style="padding-top:30px" class="panel-body">
                <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>

                <form asp-controller="Admin" asp-action="RoleCreate" method="post" class="form-horizontal" role="form">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div style="margin-bottom: 25px" class="input-group">

                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                        <input asp-for="Role.RoleName" class="form-control" placeholder="Role Name">
                        <span style="padding-left:10px;" asp-validation-for="Role.RoleName" class="text-danger"></span>

                    </div>

              





                    <div style="margin-top:10px" class="form-group">
                        <!-- Button -->
                        <div class="col-sm-12 controls">
                            <input type="submit" class="btn btn-success" value="Add">
                        </div>
                    </div>


                </form>

            </div>
        </div>
    </div>
</div>