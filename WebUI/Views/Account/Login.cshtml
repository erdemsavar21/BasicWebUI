@model WebUI.Models.Account.AccountViewModel

@{ Layout = "~/Views/Shared/_Layout.cshtml"; }


<div class="container">
    <div id="loginbox" style="margin-top:50px;" class="mainbox col-md-6">
        <div class="panel panel-info">
            <div class="panel-heading">
                <div class="panel-title">Login</div>
            </div>
            <div style="padding-top:30px" class="panel-body">
                <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>

                <form asp-controller="Account" asp-action="Login" method="post" class="form-horizontal" role="form">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div style="margin-bottom: 25px" class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                        <input asp-for="userForLoginDto.Email" class="form-control" placeholder="email">

                    </div>

                    <div style="margin-bottom: 25px" class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                        <input asp-for="userForLoginDto.Password" class="form-control" placeholder="password">

                    </div>



                    <input asp-for="userForLoginDto.RememberMe" type="checkbox">
                    Remember



                    <div style="margin-top:10px" class="form-group">
                        <!-- Button -->
                        <div class="col-sm-12 controls">
                            <input type="submit" class="btn btn-success" value="Login">
                        </div>
                    </div>


                    <div class="form-group">
                        <div class="col-md-12 control">
                            <div style="border-top: 1px solid#888; padding-top:15px; font-size:85%">

                                <a asp-controller="Account" asp-action="LoginFacebook">
                                    Login with Facebook
                                </a>
                                <span> II </span>
                                <a asp-controller="Account" asp-action="LoginGoogle">
                                    Login with Google
                                </a>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-12 control">
                            <div style="border-top: 1px solid#888; padding-top:15px; font-size:85%">
                                Forget your password!
                                <a asp-controller="Account" asp-action="ForgotPassword">
                                    Reset Password
                                </a>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-12 control">
                            <div style="border-top: 1px solid#888; padding-top:15px; font-size:85%">
                                Have an Register!
                                <a asp-controller="Account" asp-action="Register">
                                    Register
                                </a>
                            </div>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>